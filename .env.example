# Example Environment Variables for Image Reconstruction API
# Copy this file to .env and customize as needed
# Note: Environment variables override config.json values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Server Configuration
# BACKEND_HOST=0.0.0.0
# BACKEND_PORT=8000

# Model Configuration
# Path to PyTorch model file (.pth or .pt)
# BACKEND_MODEL_PATH=backend/data/models/model.pth

# Device for model inference: "auto", "cpu", or "cuda"
# BACKEND_MODEL_DEVICE=auto

# Upload Configuration
# Maximum upload size in megabytes
# BACKEND_UPLOAD_MAX_SIZE_MB=10

# Allowed MIME types (JSON array format)
# BACKEND_UPLOAD_ALLOWED_MIME_TYPES=["image/png", "image/jpeg", "image/jpg", "image/webp"]

# Allowed file extensions (JSON array format)
# BACKEND_UPLOAD_ALLOWED_EXTENSIONS=[".png", ".jpg", ".jpeg", ".webp"]

# CORS Configuration
# Allowed origins (JSON array format)
# BACKEND_CORS_ALLOWED_ORIGINS=["*"]
# For multiple origins: BACKEND_CORS_ALLOWED_ORIGINS=["http://localhost:5173", "https://yourdomain.com"]

# BACKEND_CORS_ALLOW_CREDENTIALS=true
# BACKEND_CORS_ALLOW_METHODS=["*"]
# BACKEND_CORS_ALLOW_HEADERS=["*"]

# Directory Configuration
# BACKEND_DIRECTORIES_DATA_DIR=backend/data
# BACKEND_DIRECTORIES_UPLOADS_DIR=backend/data/uploads
# BACKEND_DIRECTORIES_OUTPUTS_DIR=backend/data/outputs
# BACKEND_DIRECTORIES_MODELS_DIR=backend/data/models

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Frontend Server
# FRONTEND_PORT=5173
# FRONTEND_BACKEND_URL=http://localhost:8000

# Polling Configuration
# Job status polling interval in milliseconds
# FRONTEND_POLLING_INTERVAL_MS=800

# Number of retry attempts on error
# FRONTEND_POLLING_RETRY_ATTEMPTS=3

# UI Configuration
# FRONTEND_UI_PREVIEW_ENABLED=true
# FRONTEND_UI_DOWNLOAD_ENABLED=true
# FRONTEND_UI_SHOW_PROGRESS_BAR=true

# ============================================================================
# LOGGING
# ============================================================================

# LOGGING_LEVEL=INFO
# LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# NOTES
# ============================================================================
#
# 1. All settings have defaults in config.json
# 2. Environment variables take precedence over config.json
# 3. For arrays/objects, use valid JSON format in quotes
# 4. Restart the server after changing environment variables
# 5. See CONFIG.md for detailed configuration guide
#
